<config>
    <sections>
        <bestseller_options translate="label" module="bestseller">
            <label>Best Seller Products Config</label>
            <tab>sm</tab>
            <frontend_type>text</frontend_type>
            <sort_order>9999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable/Disable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <calc_range>
                            <label>Display best seller product of</label>
                            <frontend_type>select</frontend_type>
                            <source_model>bestseller/calcRange</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </calc_range>
                    </fields>
                </general>
                <slider_effect>
                    <label>Slider Effects</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <max_slider>
                            <backend_model>bestseller/validateNumber</backend_model>
                            <label>Max Slider</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_slider>
                        <slider_per_view>
                            <label>Sliders Per View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>bestseller/slidersPerView</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>3</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slider_per_view>
                        <autoplay>
                            <label>Autoplay</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </autoplay>
                        <autoplay_time>
                            <label>Autoplay time (ms)</label>
                            <backend_model>bestseller/validateNumber</backend_model>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </autoplay_time>
                    </fields>
                </slider_effect>
            </groups>
        </bestseller_options>
    </sections>
</config>