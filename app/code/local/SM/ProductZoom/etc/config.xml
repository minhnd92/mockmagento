<?xml version="1.0" ?>
<config>
    <modules>
        <SM_ProductZoom>
            <version>0.1.0</version>
        </SM_ProductZoom>
    </modules>

    <frontend>
        <layout>
            <updates>
                <productzoom>
                    <file>productzoom.xml</file>
                </productzoom>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <productzoom_options>
                                            <title>Product Zoom Options</title>
                                        </productzoom_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <global>
        <helpers>
            <productzoom>
                <class>SM_ProductZoom_Helper</class>
            </productzoom>
        </helpers>
    </global>
</config>